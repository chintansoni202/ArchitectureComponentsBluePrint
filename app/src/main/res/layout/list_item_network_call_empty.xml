<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.chintansoni.android.architecturecomponentsblueprint.model.api.getusers.response.ResultsItem" />

        <variable
            name="view"
            type="com.chintansoni.android.architecturecomponentsblueprint.view.fragment.NetworkCallFragment" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_list_item_network_call_empty"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="16dp"
            android:src="@drawable/ic_person"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_list_item_network_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="No Users found"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="@+id/iv_list_item_network_call_empty"
            app:layout_constraintStart_toStartOf="@id/iv_list_item_network_call_empty"
            app:layout_constraintTop_toBottomOf="@+id/iv_list_item_network_call_empty" />

    </android.support.constraint.ConstraintLayout>
</layout>